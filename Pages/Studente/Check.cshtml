@page
@model EsperiaHelp.Pages.Student.DeleteModel

@{
    ViewData["Title"] = "Iscrizione corso";
}

<h1 class="text-danger">Conferma l'iscrizione al seguente corso</h1>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Data
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Lesson.Date)
        </dd>
        <dt class="col-sm-2">
            Inizio corso
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Lesson.StartTime.TimeOfDay)
        </dd>
        <dt class="col-sm-2">
            Fine corso
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Lesson.EndTime.TimeOfDay)
        </dd>
        <dt class="col-sm-2">
            N. partecipanti
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Lesson.N_participants)
        </dd>
        <dt class="col-sm-2">
            Docente
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Lesson.ApplicationUser.Email)
        </dd>
        <dt class="col-sm-2">
            Aula
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Lesson.Classroom.Name)
        </dd>
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="Lesson.Id" />
        <a class="btn btn-success"><i class="fas fa-check" style="color: white;"></i></a> |
        <a asp-page="./Index">Torna ai corsi disponibili</a>
    </form>
</div>

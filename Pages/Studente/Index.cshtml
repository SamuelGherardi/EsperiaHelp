@page
@model EsperiaHelp.Pages.Student.IndexModel

@{
    ViewData["Title"] = "Home Page";
}

<h1 class="text-danger">Corsi disponibili</h1>

<div class="table-responsive mt-5">
    <table class="table table-hover text-center">
        <thead class="bg-danger text-white">
            <tr>
                <th>
                    Data
                </th>
                <th>
                    Inizio corso
                </th>
                <th>
                    Fine corso
                </th>
                <th>
                    Docente
                </th>
                <th>
                    Aula
                </th>
                <th>
                    Disponibilità
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
        @foreach (var item in Model.Lesson) {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Date)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.StartTime.TimeOfDay)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EndTime.TimeOfDay)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ApplicationUser.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Classroom.Name)
                </td>
                <td>
                    @if (item.N_participants < 8)
                    {
                        <i class="fas fa-check" style="color: green;"></i>
                    }
                    else if (item.N_participants == 7)
                    {
                        <i class="fas fa-exclamation-triangle" style="color: yellow;"></i>
                    }
                    else
                    {
                        <i class="fa fa-remove" style="color: red;"></i>
                    }
                </td>
                <td>
                    <a asp-page="./Check" asp-route-id="@item.Id" class="btn btn-success"><i class="fas fa-plus-circle" style="color: white;"></i></a> |
                    <a asp-page="./Details" asp-route-id="@item.Id" class="btn btn-info"><i class="fas fa-info-circle" style="color: white;"></i></a>
                </td>
            </tr>
         }
        </tbody>
    </table>
</div>

<div class="text-center mt-5">
    <p><a href="#">Controlla i tuoi corsi</a></p>
</div>
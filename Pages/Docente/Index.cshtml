@page
@model EsperiaHelp.Pages.Teacher.IndexModel

@{
    ViewData["Title"] = "Home Page";
    
}

<h1 class="text-danger">I tuoi corsi</h1>

<div class="table-responsive mt-5">
    <table class="table table-hover text-center">
        <thead class="bg-danger text-white">
            <tr>
                <th>
                    Data
                </th>
                <th>
                    Inizio corso
                </th>
                <th>
                    Fine corso
                </th>
                <th>
                    N. partecipanti
                </th>
                <th>
                    Aula
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Lesson)
            {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Date)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.StartTime.TimeOfDay)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EndTime.TimeOfDay)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.N_participants)
                </td>
                @foreach (var item2 in Model.Classroom)
                {


                    @if (item.ClassroomId == item2.Id)
                    {
                        <td>
                            @Html.DisplayFor(modelItem => item2.Name)
                        </td>
                    }
                }
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id" class="btn btn-warning"><i class="fa fa-pencil-square-o" style="color: white;"></i></a> |
                <a asp-page="./Details" asp-route-id="@item.Id" class="btn btn-info"><i class="fas fa-info-circle" style="color: white;"></i></a> |
                <a asp-page="./Delete" asp-route-id="@item.Id" class="btn btn-danger"><i class="fa fa-remove" style="color: white;"></i></a>
            </td>
            </tr>
            }
        </tbody>
    </table>
</div>

<div class="text-center mt-5">
    <p><a asp-page="./Create">Crea un corso</a></p>
</div>
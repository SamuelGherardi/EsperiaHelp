@page
@model EsperiaHelp.Pages.Subjects.DeleteModel

@{
    ViewData["Title"] = "Cancellazione";
}

<h1 class="text-danger">Vuoi davvero rimuovere questa materia?</h1>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Materia
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Subject.Name)
        </dd>
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="Subject.Id" />
        <a class="btn btn-danger"><i class="fa fa-remove" style="color: white;"></i></a> |
        <a asp-page="./Index">Torna alla lista delle materie</a>
    </form>
</div>

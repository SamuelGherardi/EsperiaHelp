@page
@model EsperiaHelp.Pages.Classes.EditModel

@{
    ViewData["Title"] = "Modifica";
}

<h1 class="text-danger">Modifica classe</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Class.Id" />
            <div class="form-group">
                <label asp-for="Class.Name" class="control-label">Classe</label>
                <input asp-for="Class.Name" class="form-control" />
                <span asp-validation-for="Class.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <a class="btn btn-success"><i class="fas fa-check" style="color: white;"></i></a>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Torna alla lista delle classi</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

@page
@model EsperiaHelp.Pages.Classes.IndexModel

@{
    ViewData["Title"] = "Classi";
}

<h1 class="text-danger">Lista delle classi</h1>

<div class="table-responsive mt-5">
    <table class="table table-hover text-center">
        <thead class="bg-danger text-white">
            <tr>
                <th>
                    Classe
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
    @foreach (var item in Model.Class) {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@item.Id" class="btn btn-warning"><i class="fa fa-pencil-square-o" style="color: white;"></i></a> |
                    <a asp-page="./Delete" asp-route-id="@item.Id" class="btn btn-danger"><i class="fa fa-remove" style="color: white;"></i></a>
                </td>
            </tr>
    }
        </tbody>
    </table>
</div>

<div class="text-center mt-5">
    <p><a asp-page="./Create">Aggiungi una nuova classe</a></p>
</div>
